Q 2, 3 -----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
n = 8
a = []
for i in range(n):
    l1 = []
    p = 0
    for j in range(i):
        l1.append(j)
    for k in l1:
        p+=1 
    a.append(p)
k = 0
for l in a:
    print(n)
    print(a)
    k+=l
print(k)
Q 8 ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
n = 3
k = 0
a = []
b = 0
while (n!=0):
    k = k+(n%10)
    a.append(n%10)
    n = n//10
a.sort()
for i in a:
    b=b+i
if (b==k):
    print("a")
else:
    print("b")
